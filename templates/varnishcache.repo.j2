[varnishcache_varnish{{ version }}]
name=varnishcache_varnish{{ version }}
baseurl=https://packagecloud.io/varnishcache/varnish{{ version }}/el/{{ ansible_distribution_major_version}}/$basearch
repo_gpgcheck=1
gpgcheck=0
enabled=1
gpgkey=https://packagecloud.io/varnishcache/varnish{{ version }}/gpgkey
sslverify=1
sslcacert=/etc/pki/tls/certs/ca-bundle.crt
metadata_expire=300

[varnishcache_varnish{{ version }}-source]
name=varnishcache_varnish{{ version }}-source
baseurl=https://packagecloud.io/varnishcache/varnish{{ version }}/el/{{ ansible_distribution_major_version}}/SRPMS
repo_gpgcheck=1
gpgcheck=0
enabled=1
gpgkey=https://packagecloud.io/varnishcache/varnish{{ version }}/gpgkey
sslverify=1
sslcacert=/etc/pki/tls/certs/ca-bundle.crt
metadata_expire=300
